# LLM Provider Configuration
PROVIDER=perplexity
PERPLEXITY_API_KEY=your-key-here
NARRATIVE_MODE=llm
LLM_REWRITE_CONFIDENCE=0.6
LLM_REWRITE_TIMEOUT_MS=1500

# Google BigQuery Configuration
GOOGLE_APPLICATION_CREDENTIALS=./service-account-key.json
# Optional: Inline or base64-encoded service account JSON
GOOGLE_APPLICATION_CREDENTIALS_JSON=
GOOGLE_PROJECT_ID=
BQ_DEFAULT_DATASET=
BQ_LOCATION=

# Data mode: mock | live | bq (alias for live execution; provenance shows 'bq')
DATA_MODE=live
# When set to false, prevents mock fallback when BQ fails (returns clear error instead)
ALLOW_MOCK_FALLBACK=true
# Business Units list page size
BU_LIST_LIMIT=8

# Deployment Platform Configuration
# Options: netlify, vercel
VITE_DEPLOY_PLATFORM=netlify
# Absolute base URL resolution for server-side
VERCEL_URL=
URL=
DEPLOY_URL=
